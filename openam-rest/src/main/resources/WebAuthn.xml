<!DOCTYPE ServicesConfiguration
        PUBLIC "=//iPlanet//Service Management Services (SMS) 1.0 DTD//EN"
        "jar://com/sun/identity/sm/sms.dtd">
<ServicesConfiguration>
    <Service name="WebAuthn" version="1.0">
        <Schema
                serviceHierarchy="/DSAMEConfig/WebAuthnService"
                i18nFileName="WebAuthnService"
                revisionNumber="1"
                resourceName="webAuthnService"
                i18nKey="WebAuthnServiceDescription">
            <Organization>
                <AttributeSchema
                        name="wrensec-am-auth-webauthn-profiles-attr-name"
                        type="single"
                        syntax="string"
                        resourceName="attributeName"
                        order="100"
                        i18nKey="attributeName">
                    <DefaultValues>
                        <Value>webAuthnDeviceProfiles</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema
                        name="wrensec-am-auth-webauthn-user-id-attr"
                        type="single"
                        syntax="string"
                        resourceName="userIdAttr"
                        order="200"
                        i18nKey="userIdAttr">
                    <DefaultValues>
                        <Value>entryUUID</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema
                        name="wrensec-am-auth-webauthn-device-settings-encryption-scheme"
                        type="single_choice"
                        resourceName="deviceSettingsEncryptionScheme"
                        order="300"
                        i18nKey="deviceSettingsEncryptionScheme">
                    <ChoiceValues>
                        <ChoiceValue i18nKey="RSAES_AES256CBC_HS512">RSAES_AES256CBC_HS512</ChoiceValue>
                        <ChoiceValue i18nKey="RSAES_AES128CBC_HS256">RSAES_AES128CBC_HS256</ChoiceValue>
                        <ChoiceValue i18nKey="None">NONE</ChoiceValue>
                    </ChoiceValues>
                    <DefaultValues>
                        <Value>NONE</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema
                        name="wrensec-am-auth-webauthn-device-settings-encryption-keystore"
                        type="single"
                        syntax="string"
                        resourceName="deviceSettingsEncryptionKeystore"
                        order="400"
                        i18nKey="deviceSettingsEncryptionKeystore">
                    <DefaultValues>
                        <Value>@BASE_DIR@/@SERVER_URI@/keystore.jks</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema
                        name="wrensec-am-auth-webauthn-device-settings-encryption-keystore-type"
                        type="single_choice"
                        resourceName="deviceSettingsEncryptionKeystoreType"
                        order="500"
                        i18nKey="deviceSettingsEncryptionKeystoreType">
                    <ChoiceValues>
                        <ChoiceValue i18nKey="JKS">JKS</ChoiceValue>
                        <ChoiceValue i18nKey="JCEKS">JCEKS</ChoiceValue>
                        <ChoiceValue i18nKey="PKCS11">PKCS11</ChoiceValue>
                        <ChoiceValue i18nKey="PKCS12">PKCS12</ChoiceValue>
                    </ChoiceValues>
                    <DefaultValues>
                        <Value>JKS</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema
                        name="wrensec-am-auth-webauthn-device-settings-encryption-keystore-password"
                        type="single"
                        syntax="password"
                        resourceName="deviceSettingsEncryptionKeystorePassword"
                        order="600"
                        i18nKey="deviceSettingsEncryptionKeystorePassword">
                    <DefaultValues>
                        <Value>changeit</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema
                        name="wrensec-am-auth-webauthn-device-settings-encryption-keypair-alias"
                        type="single"
                        syntax="string"
                        resourceName="deviceSettingsEncryptionKeystoreKeyPairAlias"
                        order="700"
                        i18nKey="deviceSettingsEncryptionKeystoreKeyPairAlias">
                </AttributeSchema>
                <AttributeSchema
                        name="wrensec-am-auth-webauthn-device-settings-encryption-privatekey-password"
                        type="single"
                        syntax="password"
                        resourceName="deviceSettingsEncryptionKeystorePrivateKeyPassword"
                        order="800"
                        i18nKey="deviceSettingsEncryptionKeystorePrivateKeyPassword">
                </AttributeSchema>
            </Organization>
        </Schema>
    </Service>
</ServicesConfiguration>
